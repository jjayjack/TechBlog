<div class="container">
    <div class="new-post">
        <div class="create">
            <h2>Create New Post</h2>
            <form class="form post-form">
                <div class="mb-3 form-group">
                    <label for="title-content" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title-content" placeholder="title">
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" rows="3"></textarea>
                </div>
        </div>
        <div class="col-12">
            <button class="btn btn-primary create" type="submit">Create</button>
        </div>
        </form>
    </div>
</div>

<div class="container previous-post">
    {{#each posts as |post|}}
    <div class="post-box">
        <div class="label">
            <h2 class="title">Title: {{post.title}}</h2>
            <span class="user-date">User and Date: {{post.user_id}}{{post.date_created}}</span>
        </div>
        <div class="post-text">
            Description: {{post.description}}
        </div>
    </div>
    {{/each}}

</div>

<script src="/js/post.js"></script>