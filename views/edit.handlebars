<div class="container">
    <div class="prev-post">
        <div class="edit">
            <h2>Edit Post</h2>
            <form class="form post-form">
                <div class="mb-3 form-group">
                    <label for="title-content" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title-content" value="{{post.title}}">
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" rows="3">{{post.description}}</textarea>
                </div>
        </div>
        <div class="col-12">
            <button class="btn btn-primary post" type="submit">Post</button>
        </div>
        </form>
    </div>
</div>

<script src="/js/edit.js"></script>