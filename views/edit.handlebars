<div class="container">
    <div class="prev-post">
        <div class="edit">
            <h1 class="user-dash">Edit Post</h1>
            <div class="post-box">
                <div class="headLabel">
                    <form class="post-form" data-id="{{post.id}}">
                    <label for="title-content" class="form-label"></label>
                    <input type="text" class="form-control" id="title-content" value="{{post.title}}">
                </div>
                <div class="post-text">
                    <label for="content" class="form-label"></label>
                    <textarea class="form-control post-text" id="content" rows="3">{{post.description}}</textarea>
                </div>
        </div>
        <div class="col-12">
            <button class="btn btn-primary postBtn" type="submit">Post</button>
        </div>
        </form>
    </div>
</div>

<script src="/js/edit.js"></script>